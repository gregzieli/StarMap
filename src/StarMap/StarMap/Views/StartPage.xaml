<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             NavigationPage.HasNavigationBar="false"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="StarMap.Views.StartPage">
	<AbsoluteLayout>
		<Label AbsoluteLayout.LayoutBounds="0, .2, 1, .5" 
           AbsoluteLayout.LayoutFlags="All"
           HorizontalOptions="Center"           
           FontSize="36"
           Text="Star Map" />

		<Label x:Name="navArrow"
           AbsoluteLayout.LayoutBounds="0, .5, 1, 1" 
           AbsoluteLayout.LayoutFlags="All"
           VerticalOptions="Center"
           VerticalTextAlignment="Center"
           Text="◀ NAVIGATION" />

		<Label AbsoluteLayout.LayoutBounds=".5, 1, 1, 1" 
           AbsoluteLayout.LayoutFlags="All"
           HorizontalOptions="Center"
           VerticalOptions="End"
           HorizontalTextAlignment="Center"
           Text="STATUS&#x0d;&#x0a;▼" />

		<Label AbsoluteLayout.LayoutBounds="1, .5, 1, 1" 
           AbsoluteLayout.LayoutFlags="All"
           VerticalOptions="Center"
           HorizontalOptions="End"
           VerticalTextAlignment="Center"
           Text="FILTERS ▶" />

	</AbsoluteLayout>
</ContentPage>